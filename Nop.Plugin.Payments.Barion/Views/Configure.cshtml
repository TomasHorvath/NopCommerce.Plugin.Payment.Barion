@model Nop.Plugin.Payments.Barion.Models.ConfigurationModel;

@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="Barion" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
               <img alt="Barion Payment Plugin" src="data:image/png;base64," />
                <p>
                    @T("Plugins.Payments.Barion.Configure.Description")
                </p>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="POSKey_OverrideForStore" asp-input="POSKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="POSKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="POSKey" />
                        <span asp-validation-for="POSKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="ApiUrl_OverrideForStore" asp-input="ApiUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="ApiUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ApiUrl" />
                        <span asp-validation-for="ApiUrl"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="RedirectUrl_OverrideForStore" asp-input="RedirectUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />

                        <nop-label asp-for="RedirectUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="RedirectUrl" />
                        <span asp-validation-for="RedirectUrl"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="CallbackUrl_OverrideForStore" asp-input="CallbackUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="CallbackUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CallbackUrl" />
                        <span asp-validation-for="CallbackUrl"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="BarionPayee_OverrideForStore" asp-input="BarionPayee" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="BarionPayee" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="BarionPayee" />
                        <span asp-validation-for="BarionPayee"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="IsSandbox_OverrideForStore" asp-input="IsSandbox" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="IsSandbox" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="IsSandbox" />
                        <span asp-validation-for="IsSandbox"></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="LogTransaction_OverrideForStore" asp-input="LogTransaction" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />

                        <nop-label asp-for="LogTransaction" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="LogTransaction" />
                        <span asp-validation-for="LogTransaction"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
